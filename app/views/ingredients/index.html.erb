<div class="container py-3">
  <p style="color: green"><%= notice %></p>

  <div id="ingredients">
    <div class="container">
      <div class="row justify-content-md-center">
        <h1 class="text-center">Ingredients</h1>
        <% @ingredients.each do |ingredient| %>
          <div class="col col-sm-4">
            <%= render ingredient %>
          </div>
        <% end %>
      </div>
    </div>
        
    <%= form_with url: "/search", method: :get do |form|%>
      <%= collection_check_boxes :dish, :ingredient_ids, Ingredient.all, :id, :name do |ing| %>
        <% ing.label(class: "form-check-label p-2") {ing.check_box(class: "form-check-input") + ing.text} %> 
      <% end %>
      <%= form.submit "Search", class: "btn btn-success" %>
    <% end %>

    <div class="mt-3 mb-3">
      <%= link_to "New", new_ingredient_path %>|
      <%= link_to "Dishes", root_path %> |
    </div>
  </div>
</div>
